{
	"compilerOptions": {
		"target": "ES2020",
		"lib": [
			"ES2022", "ES6"
		],
		"types": [
			"reflect-metadata"
		],
		"module": "ES2022",
		"moduleResolution": "Node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowJs": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"outDir": "build",
		"rootDir": "src",
		"baseUrl": ".",
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"ts-node": {
		"swc": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": ["build", "node_modules"]
}
